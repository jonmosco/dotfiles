alias kgns='kubectl get namespaces'
alias kgs='kubectl get secrets'
alias kgsvc='kubectl get service'
alias kgsa='kubectl get serviceaccounts'
alias kgpv='kubectl get pv'
alias kgpvc='kubectl get pvc'
